{
  "parserOptions": {
    "ecmaVersion": 6
  },
  "extends": "eslint:recommended",
  "rules": {
    "no-extra-parens": ["error", "all"],
    "semi": ["error", "always"],
    "no-shadow": ["error"],
    "indent": ["error", 2],
    "no-var": ["error"]
  },
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  }
}

